# This is a sample menu.lst file. You should make some changes to it.
# The old install method of booting via the stage-files has been removed.
# Please install GRLDR boot strap code to MBR with the bootlace.com
# utility under DOS/Win9x or Linux.
#
# It must be UTF-8 encoding for multi-lingual support. Font lines can be
# appended to the file. The font lines should be in the unifont.hex format.

title Kaspersky Rescue 10\n1. %copyfile% 'rescue.iso' %intodir% '/rescue/'\n2. %openfile% 'rescue.iso' & %copyfile% '/boot/rescue,/boot/rescue.igz' %intodir% '/rescue/'
	find --set-root --ignore-floppies /rescue/rescue.igz
	kernel	/rescue/rescue root=live:CDLABEL=KRD10 rootfstype=auto vga=791 init=/init kav_lang=en udev liveimg splash quiet doscsi nomodeset
	initrd	/rescue/rescue.igz

title Bitdefender Rescue CD\n%copyfile% 'bitdefender.iso' %intodir% '/Files/Antivirus/'
	find --set-root --ignore-floppies /Files/Antivirus/bitdefender.iso
	#enable parttype output
	debug 1
	# make empty table entry in 4th position in ptn table
	parttype (hd0,3) | set check=
	debug off
	set check=%check:~-5,4%
	if "%check%"=="0x00" partnew (hd0,3) 0 0 0
	if not "%check%"=="0x00" echo WARNING: PTN TABLE 4 IS ALREADY IN USE! && pause && configfile /menu.lst
	debug 1
	map /Files/Antivirus/bitdefender.iso (0xff) || map --mem /Files/Antivirus/bitdefender.iso (0xff)
	map --hook
	partnew (hd0,3) 0 /Files/Antivirus/bitdefender.iso
	root (0xff)
	chainloader (0xff)

title AVG Rescue CD\n%copyfile% 'avg.iso' %intodir% '/Files/Antivirus/'
	find --set-root --ignore-floppies /Files/Antivirus/avg.iso
	map /Files/Antivirus/avg.iso (0xff) || map --mem /Files/Antivirus/avg.iso (0xff)
	map --hook
	chainloader (0xff)

title Avira Rescue System\n%copyfile% 'avira.iso' %intodir% '/Files/Antivirus/'
	find --set-root --ignore-floppies /Files/Antivirus/avira.iso
	map /Files/Antivirus/avira.iso (0xff) || map --mem /Files/Antivirus/avira.iso (0xff)
	map --hook
	kernel	(0xff)/casper/vmlinuz file=/cdrom/preseed/ubuntu.seed iso-scan/filename=/Files/Antivirus/avira.iso boot=casper quiet splash --
	initrd	(0xff)/casper/initrd.lz

title COMODO Resuce Disk\n%copyfile% 'comodo.iso' %intodir% '/Files/Antivirus/'
	find --set-root --ignore-floppies /Files/Antivirus/comodo.iso
	map /Files/Antivirus/comodo.iso (0xff) || map --mem /Files/Antivirus/comodo.iso (0xff)
	map --hook
	chainloader (0xff)
	
title ESET SysRescue Live\n%extrfile% 'eset-sysrescue.xxx.enu.iso' %intodir% '/Files/Antivirus/eset/'
	find --set-root --ignore-floppies /Files/Antivirus/eset/casper/vmlinuz
	kernel	/Files/Antivirus/eset/casper/vmlinuz boot=casper cdrom-detect/try-usb=true noprompt floppy.allowed_drive_mask=0 ignore_uuid live-media-path=/Files/Antivirus/eset/casper/ quiet splash --
	initrd	/Files/Antivirus/eset/casper/initrd.lz
	
title Dr.Web LiveDisk\n%extrfile% 'drweb-livedisk-xx-cd.iso' %intodir% '/Files/Antivirus/drweb/'
	find --set-root --ignore-floppies /Files/Antivirus/drweb/casper/vmlinuz
	kernel	/Files/Antivirus/drweb/casper/vmlinuz boot=casper cdrom-detect/try-usb=true noprompt floppy.allowed_drive_mask=0 ignore_uuid live-media-path=/Files/Antivirus/drweb/casper/ quiet splash --
	initrd	/Files/Antivirus/drweb/casper/initrd.lz
	
title Anvi Rescue Disk\n%copyfile% 'anvi.iso' %intodir% '/Files/Antivirus/'
	find --set-root --ignore-floppies /Files/Antivirus/anvi.iso
	map /Files/Antivirus/anvi.iso (0xff) || map --mem /Files/Antivirus/anvi.iso (0xff)
	map --hook
	kernel	(0xff)/CDlinux/bzImage quiet CDL_LANG=en_US.UTF-8 vga=788 CDL_DIR=/Files/Antivirus/ CDL_IMG=anvi.iso
	initrd	(0xff)/CDlinux/initrd
	
title F-Secure Rescue CD\n%extrfile% 'rescue-cd-xxx.iso' %intodir% '/Files/Antivirus/f-secure/'
	find --set-root --ignore-floppies /Files/Antivirus/f-secure/boot/isolinux/fsecure/linux
	kernel	/Files/Antivirus/f-secure/boot/isolinux/fsecure/linux noprompt knoppix_dir=Files/Antivirus/f-secure/KNOPPIX ramdisk_size=100000 lang=en vt.default_utf8=0 apm=power-off quiet nomce loglevel=1 nolapic_timer nosound console=tty10 video=noblank
	initrd	/Files/Antivirus/f-secure/boot/isolinux/fsecure/minirt.gz
	
title Panda Cloud Cleaner\n%extrfile% 'PandaCloudCleanerFull.iso' %intodir% '/Files/Antivirus/Panda/'
	find --set-root --ignore-floppies /Files/Antivirus/Panda/live/vmlinuz
	linux	/Files/Antivirus/Panda/live/vmlinuz boot=live live-media-path=/Files/Antivirus/Panda/live config locales=en_US.UTF-8 quiet
	initrd	/Files/Antivirus/Panda/live/initrd.img
	
title %backlst%
	fallback +1
	find --set-root --ignore-floppies --ignore-cd /Boot/grub4dos/menu.lst
	configfile /Boot/grub4dos/menu.lst

title Load Grub2
	chainloader /Boot/grub/g2ldr

iftitle [ls /Boot/syslinux/syslinux.bin] Load Syslinux
	chainloader /Boot/syslinux/syslinux.bin

iftitle [ls /Boot/syslinux/notbin.txt] Load Syslinux
	chainloader +1

title %reboot%
	reboot

title %halt%
	halt

title %mcmd%
	commandline

